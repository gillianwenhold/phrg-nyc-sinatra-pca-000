<h1>Create a new figure!</h1>

<form method="POST" action="/figures">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br>

  <label>Select a Title: </label>
  <% Title.all.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>"><%=t.name%></input>
  <% end %>
  <input type="text" name="title[name]" id="new_title">

  <br>

  <label>Select a Landmark: </label>
  <% Landmark.all.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>"><%=l.name%></input>
  <% end %>
  <label>Or create a new landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Create New Figure">
</form>
